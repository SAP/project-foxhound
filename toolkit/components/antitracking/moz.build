    BROWSER_CHROME_MANIFESTS += [
        "test/browser/browser-blocking.toml",
        "test/browser/browser.toml",
    ]

XPCSHELL_TESTS_MANIFESTS += ["test/xpcshell/xpcshell.toml"]

TEST_DIRS += ["test/gtest"]

SPHINX_TREES["anti-tracking"] = "docs"
